---
import Header from '../css/header.astro'
import Footer from '../css/footer.astro'
import Start from '../css/start.astro'
import Post from '../css/post.astro'
---

<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro</title>
	</head>
	<body>
		<Header />
        <Start />
        <Post />
		<Footer />
		
		

	<style is:global>
		@import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@100&family=Poppins:wght@300;400;500&display=swap');
	:root{
    --color-primary: rgb(33, 33, 34);
    --color-primary-light: hsla(300, 53%, 47%, 0.18);
    --color-primary-variant:rgb(230, 31, 64);
    --color-red: #da0f3f;
    --color-red-light: hsl(346, 87%, 46%, 15%);
    --color-green: #00c476;
    --color-green-light: hsl(156, 100%, 38%, 15%);
    --color-gray-900: #c51381;
    --color-gray-700: #2d2b7c;
    --color-gray-300: rgba(242, 242, 254, 0.3);
    --color-gray-200: rgba(242, 242, 254, 0.7);
    --color-gray-100:  rgba(194, 88, 106, 0.795);
    --color-white: #f2f2fe;
    --color-bg: #0f0f3e;

    --transition: all 300ms ease;

    --container-width-lg: 74%;
    --container-width-md: 88%;
    --form-width: 40%;

    --card-border-radius-1: 0.3rem;
    --card-border-radius-2: 0.5rem;
    --card-border-radius-3: 0.8rem;
    --card-border-radius-4: 2rem;
    --card-border-radius-5: 5rem 0;
	
    
}



*{
    margin: 0;
    padding: 0;
    outline:0;
    border: 0;
    appearance: 0;
    list-style: none;
    text-decoration: none;
    box-sizing: border-box;
}

body{
    font-family: 'Monserrat', sans-serif;
    line-height: 1.6;
    color: white;
    overflow-x: hidden ;
    background: black;
    font-size: 0.9rem;
  
}


h1,h2,h3,h4,h5{
    color: var(--color-white);
    line-height: 1.3;
    text-align: center;
}

h1{
    font-size: 3rem;
    margin: 1rem 0;
}

h2{
    font-size: 1.7rem;
    margin: 1rem 0;
}

h3{
    font-size: 1.1rem;
    margin: 0.8rem 0 0.5rem;
}
h4{
    font-size:1rem ;
}
a{
    color: var(--color-white);
    transition: var(--transition);
}

img{
    display: block;
    width: 100%;
    object-fit: cover;
}

</style>	

    
	
	</body>
</html>
